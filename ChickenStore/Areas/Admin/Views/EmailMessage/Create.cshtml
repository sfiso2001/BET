@model ChickenStore.Models.EmailMessage;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Send Message";
}

<form method="post" enctype="multipart/form-data">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="FromEMail"></label>
                </div>
                <div class="col-8">
                    <input asp-for="FromEMail" class="form-control" />
                    <span asp-validation-for="FromEMail" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="FromName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="FromName" class="form-control" />
                    <span asp-validation-for="FromName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Subject"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Subject" class="form-control" />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MessageText"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="MessageText" class="form-control" /></textarea>                    
                    <span asp-validation-for="MessageText" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col-4">
                            <button type="submit" onclick="return validateInput()" class="btn btn-primary form-control">Send Message</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

            <div class="col-3 offset-1">
         
            </div>      
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}