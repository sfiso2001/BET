@model IEnumerable<ChickenStore.Models.Product>

    <div class="row pb-3 backgroundWhite">

        @foreach(var product in Model) 
        { 
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12  p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card" style="border:0px;">
                        <img src="@product.ImageUrl" class="card-img-top rounded" />
                        <div class="pl-1">
                            <p class="card-title h5"><b style="color:#2c3e50">@product.Name</b></p>
                            @*<p class="card-title text-primary"><b>@product.Description</b></p>*@
                        </div>
                        <div style="padding-left:5px;">
                            <p style="color:maroon">Price: <b class="">R @product.Price.ToString("0.00")</b></p>
                        </div>
                        <div style="padding-left:5px;">
                            <p style="color:maroon">Unit: @product.Unit</p>
                        </div>
                    </div>
                    <div>
                        <a asp-area="Admin" asp-controller="Product" asp-action="Upsert" class="btn btn-primary" form-control" asp-route-id="@product.Id">DETAILS</a>
                    </div>
                </div>
            </div>
        </div>
        }
    </div>

